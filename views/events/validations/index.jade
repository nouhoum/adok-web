extends ../../../layouts/account

block head
	title #{title}

block feet
	script(src='/views/min/events/validations/index.min.js')

block body
	div.app-content
		div.page-container
			#legend
			#no_result
				span Aucune validations propos√©es pour le moment.
			#valiflux

	script(type="text/template", id="tmpl-valiflux")
		a(href!="/event/<%= eid._id %>/validation/<%= _id %>")
			.item
				span.username par <%= name %>
				br
				span.isvalidate <%= status %>
				br
				span.nbpositif  <%= nbVote.positive %>
				span.nbnegatif &nbsp/&nbsp<%= nbVote.negative %>

	script(type="text/template", id="tmpl-legend")
		ul.list
			li <%= legend %>

	script(type='text/template', id='data-valiflux') !{valiflux}
	script(type='text/template', id='data-legend') !{legend}
