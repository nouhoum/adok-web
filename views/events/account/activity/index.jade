extends ../../../../layouts/account

block head
	title #{title}
	link(href='/adok_components/mapbox/mapbox.css', rel='stylesheet')

block feet
	script(src='/adok_components/mapbox/mapbox.js')
	script(src='/adok_components/mapbox/locate.js')
	script(src='/adok_components/mapbox/fullscreen.js')
	script(src='/views/min/events/index.min.js')
	script(src='/views/events/detail_event.js')

block body
	div.app-content
		div.page-container
			include ../../../../layouts/details_event
			#proposal
				div.right

	script(type='text/template', id="tmpl-right")
		input.elat(type="hidden", id="lat", value!="<%= latLng[1] %>")
		input.elng(type="hidden", id="lng", value!="<%= latLng[0] %>")
		<% if (latLng[0]) { %>
		div(id="map-event")
		<% } %>
		div.title
			<%= title %>
		div.hashtag
			label Mots clés 
			span <%= hashtag %>
		<% if (accType == 'account') { %>
		a.prop_by(href!='/user/<%= acc._id %>')
			span= t("event.ppby")
			div.author
				span.fullname
					<%= acc.roles.account.name.first %>
				<% if (acc.roles.account.picture) { %>
				img(src!='/media/<%= acc.roles.account.picture %>')
				<% } %>
		<% } %>
		<% if (desc) { %>
		div.desc
			<%= desc %>
		<% } %>
		div.place
			<% if (latLng[0]) { %>
			span Adresse :
			span <%= place %>
			<% } %>
		if (!isUserAccount)
			div.join_proposal
				button.btn.btn-join(id="t_prop_join") Participer
			div.left_proposal
				button.btn.btn-left(id="t_prop_left") Se désinscrire
			div.validate_proposal
				button.btn.btn-wait(id="t_prop_valid") Valider !
			div.report-challenge
				a(id="t_report_c") Signaler l'évenement
		div.comments
			input(id='commentTextaera' type='text', name='comment', value!='', placeholder='Poster un commentaire')
			button.btn.btn-validate(id='buttonAddComment') Publier
			ul(id='listComment')

	script(type='text/template', id='tmpl-createReport')
		div.wrap-report
			label Votre signalement concerne
			select.category(id="category", name="category")
				option(value='hrai') Haine, racisme ou insultes
				option(value='porn') Pornographie
				option(value='void') Usurpation d'identité
				option(value='vopi') Vol de photos
				option(value='othe') Autre(s)
			div
				label(for="comments") Commentaires
				textarea.comments(id="comments", name="comments")
			div.validation
				button.btn.btn-create_report Envoyer

	script(type='text/template', id='event-results') !{event}
	script(type='text/template', id='event-reg') !{isRegistered}
	script(type='text/template', id='event-participant') !{participants}
