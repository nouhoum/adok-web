extends ../../layouts/account

block head
  title= t('name')

block feet
  script(src='/views/min/adok_components/map.min.js')

block body
  div.app-content
    div.page-container
      div.m-tool__wrap
        div.m-tool(id="tool-home")
          center
            div.waiting-tiles
              span.uptodate= t("userhome.up-list")
              div.area-waiting
                span.waiting-counter 0
                span.only= t("userhome.count-challenge")
                span.multi= t("userhome.count-challenge")
          div.count-results
            span.res
            span.label= t('res')
          div.results
            ul#tileItems.items
          div.no-result
            span.no-res= t("userhome.no-res")
