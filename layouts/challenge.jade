div.box-overlay#m-overlay
div.m-propose(id="propose", aria-hidden="true")
  div.l-propose.m-modal
    div.modal__header
      span.title= t('challenge._it')
      span.close
        i.fa.fa-backward
        = t('cl')
    div.modal__content
      div.propose__wrap
        div.fs-form-wrap(id="propose_wrap")
          form.fs-form.fs-form-full(id="propose_form", autocomplete="off")
            div.msgbox
              span.error-1= t('challenge.error-field')
              span.error-2= t('challenge.error-mail')
            ol.fs-fields
            button.fs-submit(type="submit") Valider
    div.modal__footer
      div.return
        button.btn= t('challenge.return')

script(type='text/template', id='tmpl-event')
  li(data-input-trigger)
    label.fs-field-label.fs-anim-upper(for='title')= t('challenge.title')
    input.fs-anim-lower(name='title', value!='<%= title %>', autofocus, required)
    label.fs-field-label.fs-anim-upper(for='desc')= t('challenge.desc')
    textarea.fs-anim-lower(name='desc', value!='<%= desc %>')
    label.fs-field-label.fs-anim-upper(for='place')= t('challenge.place')
    input.fs-anim-lower(name='place', value!='<%= place %>', required)
    input.fs-anim-lower(type='hidden', name='place_value', value!='<%= place_value %>', required)
    input.fs-anim-lower(type='hidden', name='place_Lat', value!='<%= place_Lat %>', required)
    input.fs-anim-lower(type='hidden', name='place_Lng', value!='<%= place_Lng %>', required)
  li(data-input-trigger)
    label.fs-field-label.fs-anim-upper(for='fromDate')= t('challenge.date')
    input.fs-anim-lower(name='dateCtrl', type='text', data-role="none",
          value=moment().format('DD/MM') + " " + moment().add(1, "M").format('DD/MM'),
          max= moment().endOf('month').format('DD/MM'), min= moment().format('DD/MM'), required)
    div.fs-anim-lower#rangeCtrld0
    label.fs-field-label.fs-anim-upper(for='hour0')= t('challenge.hour0')
    input.fs-anim-lower(name='hour0', type='time', data-role="none", value= "01:00", required)
    label.fs-field-label.fs-anim-upper(for='hour1')= t('challenge.hour1')
    input.fs-anim-lower(name='hour1', type='time', data-role="none", value= "23:00", required)
  li(data-input-trigger)
    div.privacy#privacy
      div.ptc
        label.fs-field-label.fs-anim-upper Notifier des amis
        input(type="text", name="ptc_list")
        ul.container-ptc
      div.members
        label.fs-field-label.fs-anim-upper Nombre maximum d'invit√©s
        input.fs-anim-lower(type='input', name='members', value!='<%= numOfPtc %>')


