div.modals
  div.sign-in
    div.m-signin(id="signin", aria-hidden='true')
      div.l-signin.m-modal
        div.modal__header
          span.title Sign-IN!
          span.close
            i.fa.fa-backward
            = t('cl')
        div.modal__content
          h1 Login
          div.socials
            if oauthGoogle ||oauthFacebook
              if oauthMessage
                div.alerts
                  div.alert.alert-info.alert-dismissable
                    button.close(type='button', data-dismiss='alert') &times;
                    |#{oauthMessage}&nbsp;
                    b
                      a(href='/signup/')= t('nav.signup')
              div.form-actions
                div.btn-group.btn-group-justified
                  if oauthFacebook
                    a(href='/login/facebook/')
                      img(src='/medias/socials/fb.svg' alt='Facebook')
                  if oauthGoogle
                    a(href='/login/google/')
                      img(src='/medias/socials/g.svg' alt='Google+')
        div.modal__footer
