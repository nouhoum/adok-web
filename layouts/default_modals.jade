div.modals
  div.sign-in
    div.m-signin(id="signin", aria-hidden='true')
      div.l-signin.m-modal
        div.modal__header
          span.title Sign-IN!
          span.close
            i.fa.fa-backward
            = t('cl')
        div.modal__content
          div.socials
            if oauthGoogle ||oauthFacebook
              if oauthMessage
                div.alerts
                  div.alert.alert-info.alert-dismissable
                    button.close(type='button', data-dismiss='alert') &times;
                    |#{oauthMessage}&nbsp;
                    b
                      a(href='/signup/')= t('nav.signup')
              div.form-actions
                div.btn-group.btn-group-justified
                  if oauthFacebook
                    div.socials-button
                      a.btn-facebook(href='/login/facebook/')
                        i.fa.fa-facebook
                        span Se connecter avec Facebook
                  if oauthGoogle
                    div.socials-button
                      a.btn-google-plus(href='/login/google/')
                        i.fa.fa-google
                        span Se connecter avec Google+
        div.modal__footer
